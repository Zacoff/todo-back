generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id  String @id
  email    String @unique
  name     String
  password String
  notes    Note[]
}

model Note {
  note_id Int     @id @default(autoincrement())
  user_id String
  body    String
  date    String
  check   Boolean @default(false)
  title   String
  author  User    @relation(fields: [user_id], references: [user_id])
}
